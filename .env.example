# LLM provider configuration
LLM_PROVIDER=openai          # openai | google | ollama
LLM_MODEL=gpt-4o
LLM_TEMPERATURE=0

# API keys
OPENAI_API_KEY=YOUR_KEY_HERE
GOOGLE_API_KEY=YOUR_KEY_HERE

# --- Database Backend ---
# Set DB_BACKEND to "supabase" or "sqlite" (auto-detected if omitted)
DB_BACKEND=supabase

# Supabase (used when DB_BACKEND=supabase)
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_KEY=your-anon-or-service-role-key
# Direct Postgres connection string (required for raw SQL execution)
# Find it in: Supabase Dashboard → Settings → Database → Connection string → URI
SUPABASE_DB_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres

# SQLite (used when DB_BACKEND=sqlite)
SQLITE_PATH=data/statapp.sqlite

# Optional
MAX_ROWS=200
LOG_LEVEL=INFO
